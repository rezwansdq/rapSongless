{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": [
          "public/**", 
          "itunesService.js", 
          ".env", 
          "package.json", 
          "package-lock.json"
        ] 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/public/index.html"
    }
  ]
} 