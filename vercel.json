{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js",   "use": "@vercel/node"   },
    { "src": "public/**",      "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)",      "dest": "/api/$1.js" },
    { "src": "/js/(.*)",       "dest": "/public/js/$1" },
    { "src": "/style.css",     "dest": "/public/style.css" },
    { "src": "/game",          "dest": "/public/index.html" },
    { "src": "/(.*)",          "dest": "/public/home.html" }
  ]
} 