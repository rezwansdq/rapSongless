{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/song-random",
      "dest": "/api/song-random.js"
    },
    {
      "src": "/api/songs",
      "dest": "/api/songs.js"
    },
    {
      "src": "/api/songs-search",
      "dest": "/api/songs-search.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 