{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["public/**", "itunesService.js", ".env"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/public/index.html"
    }
  ]
} 